<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - Registrants</title>
    <!-- Ensure `public/styles.css` contains the necessary CSS for styling -->
    <link rel="stylesheet" href="../public/css/cardStyles.css">
</head>
<body>
<h1 style="text-align: center;">New Registrants</h1>

<div class="profile-container">
    <% registrants.forEach(registrant => { %>
        <div class="profile-card">
            <img
                    src="<%= registrant.photo %>"
                    alt="<%= registrant.name %>'s Profile Picture"
            />
            <h2><%= registrant.name || 'Unknown Name' %></h2>
            <p><strong>Age:</strong> <%= registrant.age || 'N/A' %></p>
            <p><strong>Gender:</strong> <%= registrant.gender || 'N/A' %></p>
            <p><strong>Registered At:</strong> <%= new Date(registrant.createdAt).toLocaleString() || 'N/A' %></p>
        </div>
    <% }); %>
</div>
</body>
</html>